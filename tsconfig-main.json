{
    "compilerOptions": {
        "target": "esNext",
        "module": "commonjs",
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "allowJs": true,
        "paths": {
            "src/*": [
                "src/*"
            ]
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "./public/**/*"
    ]
}